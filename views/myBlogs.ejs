<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Navbar & Cards</title>
    
    <link rel="stylesheet" href="/css/blogs.css"><style>
    
    </style>
  </head>
  <body>
    <header>
      <h1>CMS</h1>
    </header>

   <%- include("components/navbar")%>
   <h1>My Blogs</h1>

    <div class="card-container">
        <% myBlogs.forEach((blog)=>{ %>

        
            <div class="card">
              <h2><%- blog.title %></h2>
              <h3><%- blog.subTitle %></h3>
              <img src = <%- blog.image %> alt="" height="200px" width="200px">
              <p><%- blog.description %></p>
              
              <a href="/single/<%- blog.id %>">ReadMore</a>
              
            </div>
            <%    }) %> 
      
    
    </div>

    <%-include('components/footer') %>
  </body>
</html>
